{
  "expo": {
    "name": "My Gallery",
    "slug": "my-gallery",
    "scheme": "mygallery",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "newArchEnabled": true,
    "orientation": "portrait",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.abhinay.mygallery",
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We use the microphone for voice captions",
        "NSPhotoLibraryAddUsageDescription": "We save selected photos to your gallery database",
        "NSPhotoLibraryUsageDescription": "We need access to your photos to let you pick images",
        "NSCameraUsageDescription": "We need the camera to take photos"
      }
    },
    "android": {
      "package": "com.abhinay.mygallery",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "extra": {
      "eas": {
        "projectId": "YOUR-EAS-PROJECT-ID"
      },
      "googleWebClientId": "944451688443-j3t502v2pebmhh0bqtd3g9h3ukpf4rh6.apps.googleusercontent.com",
      "googleAndroidClientId": "944451688443-etegcqj4i9sa6g0fjrtbm710iq6io2i5.apps.googleusercontent.com",
      "googleIosClientId": "944451688443-p1khii1l9enc1but1mvl1m0f930lk08s.apps.googleusercontent.com"
    },
    "plugins": [
      "expo-sqlite",
      "expo-web-browser"
    ]
  }
}
